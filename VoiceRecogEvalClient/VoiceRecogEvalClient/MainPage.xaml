<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoiceRecogEvalClient.MainPage"
             x:Name="ContentPage"
             xmlns:Controls="clr-namespace:VoiceRecogEvalClient.Controls">
    
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"
                   IsVisible="True"
                   FontSize="Large"
                   HorizontalTextAlignment="Center"
                   TextColor="{StaticResource Key=TextColor}"
                   x:Name="CenterText"/>
            <Button Grid.Row="1"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="EndAndExpand"
                    FontSize="Large"
                    Margin="0,0,0,30"
                    Padding="10,10,10,10"
                    Text="Pause"
                    x:Name="PauseResumeButton"
                    Clicked="PauseResumeButton_Clicked"/>
            <Controls:AudioChartView Grid.Row="2" x:Name="AudioChartView"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
